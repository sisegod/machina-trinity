{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ViewSpec",
  "type": "object",
  "required": [
    "title",
    "summary_text",
    "redaction"
  ],
  "properties": {
    "title": {
      "type": "string"
    },
    "summary_text": {
      "type": "string"
    },
    "tables": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "redaction": {
      "type": "object",
      "required": [
        "mode"
      ],
      "properties": {
        "mode": {
          "type": "string",
          "enum": [
            "none",
            "mask",
            "drop_sensitive"
          ]
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}