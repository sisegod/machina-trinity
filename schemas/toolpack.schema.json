{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ToolPack Manifest",
  "type": "object",
  "required": [
    "toolpack_id",
    "toolpack_version",
    "trust_tier",
    "tools"
  ],
  "properties": {
    "toolpack_id": {
      "type": "string",
      "pattern": "^toolpack\\.[a-z0-9_\\-\\.]+$"
    },
    "toolpack_version": {
      "type": "string"
    },
    "trust_tier": {
      "type": "string",
      "enum": [
        "tier0_builtin",
        "tier1_signed",
        "tier2_untrusted"
      ]
    },
    "tools": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "aid",
          "name",
          "deterministic",
          "estimate_model",
          "inputs_schema",
          "outputs_schema",
          "tags"
        ],
        "properties": {
          "aid": {
            "type": "string",
            "pattern": "^AID\\.[A-Z0-9_\\-\\.]+\\.v\\d+$"
          },
          "name": {
            "type": "string"
          },
          "deterministic": {
            "type": "boolean"
          },
          "estimate_model": {
            "type": "object",
            "required": [
              "mode"
            ],
            "properties": {
              "mode": {
                "type": "string",
                "enum": [
                  "ConservativeBound",
                  "InfinityBound"
                ]
              }
            },
            "additionalProperties": true
          },
          "inputs_schema": {
            "type": "object"
          },
          "outputs_schema": {
            "type": "object"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 1
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}